<%= render "shared/navbar" %>
<h1>List of Tasks</h1>

<% if @tasks.empty? %>
  <p>No tasks to display.</p>
<% else %>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.title, task_path(task) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= link_to "New Task", new_task_path %>
